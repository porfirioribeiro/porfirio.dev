{
	"eslint.enable": true,
	"eslint.format.enable": true,
	"eslint.debug": true,
	"editor.defaultFormatter": "esbenp.prettier-vscode",
	"eslint.useFlatConfig": true,
	"[svelte]": {
		"editor.defaultFormatter": "dbaeumer.vscode-eslint"
	},
	"[typescript]": {
		"editor.defaultFormatter": "dbaeumer.vscode-eslint"
	},
	"editor.formatOnSave": true,
	"cSpell.enabled": true,
	"cSpell.enableFiletypes": ["svelte"],
	"cSpell.words": [
		//ignore common HTML stuff that fails on spell check
		"noopener",
		"noreferrer",
		"prerender",
		// words that should be on dictionary...
		"Porf√≠rio"
	]
}
